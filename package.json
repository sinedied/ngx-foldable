{
  "name": "ngx-foldable",
  "version": "0.0.0",
  "description": "Angular library to help you build dual-screen experiences for foldable or dual-screen devices",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:lib": "npm run -s copy:assets && ng build --prod",
    "build:demo": "ng build --prod demo --base-href='/ngx-foldable/demo'",
    "build:docs": "compodoc -p projects/lib/tsconfig.lib.json projects/lib/src/core -d dist/docs && cp -R dist/demo dist/docs/",
    "deploy:docs": "gh-pages -d dist/docs",
    "test": "ng test",
    "test:ci": "ng lint && ng test --watch false",
    "lint": "ng lint",
    "copy:assets": "cp README.md LICENSE projects/lib/",
    "serve:docs": "compodoc -p projects/lib/tsconfig.lib.json projects/lib/src/core -d dist/docs -s -w -r 4210 -o --disable-internal",
    "release:check": "semantic-release --dry-run"
  },
  "keywords": [
    "angular",
    "foldable",
    "library",
    "surface",
    "multi-screen",
    "dual-screen",
    "components",
    "helper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/ngx-foldable.git"
  },
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/ngx-foldable",
  "bugs": {
    "url": "https://github.com/sinedied/ngx-foldable/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^11.2.5",
    "@angular/common": "^11.2.5",
    "@angular/compiler": "^11.2.5",
    "@angular/core": "^11.2.5",
    "@angular/forms": "^11.2.5",
    "@angular/platform-browser": "^11.2.5",
    "@angular/platform-browser-dynamic": "^11.2.5",
    "@angular/router": "^11.2.5",
    "rxjs": "~6.6.0",
    "spanning-css-polyfill": "^2.0.1",
    "tslib": "^2.0.0",
    "windowsegments-polyfill": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1102.4",
    "@angular-eslint/builder": "1.2.0",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/schematics": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/cli": "^11.2.4",
    "@angular/compiler-cli": "^11.2.5",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.20.5",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "codelyzer": "^6.0.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "gh-pages": "^3.1.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.1.2",
    "protractor": "~7.0.0",
    "semantic-release-npm-github": "^1.0.4",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "compodoc": {
    "hideGenerator": true,
    "disableInternal": true,
    "disablePrivate": true,
    "disableCoverage": true,
    "disableDependencies": true
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/ngx-foldable",
          "tarballDir": ".package"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": ".package/*.tgz"
        }
      ]
    ],
    "branches": "main"
  }
}
